<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Profile Image</th>
      <th>Name</th>
      <th>Bio</th>
      <th>Job</th>
      <th>Hobbies</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= image_tag profile.image.url, class: 'img-fluid', width: 200 %></td>
        <td><%= profile.full_name %></td>
        <td><%= profile.bio %></td>
        <td><%= profile.job %></td>
        <td><%= profile.hobbies %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
